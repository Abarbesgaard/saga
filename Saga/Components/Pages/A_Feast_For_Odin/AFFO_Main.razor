@page "/AFFO_Main"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager
<h1>A Feast For Odin</h1>
<h2>By Uwe Rosenberg</h2>


<a @onclick="GoToRandomScenario" href="/AFFO_Main">
    <img src="/Image/AFFO_Btns/AFFO_Random_Scenario.png" alt="A Feast for Odin" width="636" height="87">
</a>

@code {
    private void GoToRandomScenario()
    {
        Debugger.MethodInitiated("GoToAFeastForOdin");
        NavigationManager.NavigateTo("/AFFO_Random_Scenarios");
        Debugger.MethodTerminated("GoToAFeastForOdin");
    }
}
<style>
    .btn {
        background-color: #fff;
        border: 0 solid #e2e8f0;
        border-radius: 1.5rem;
        box-sizing: border-box;
        color: #0d172a;
        cursor: pointer;
        display: inline-block;
        font-size: 1.1rem;
        line-height: 1;
        padding: 10px;
        text-align: center;
        text-decoration: none #0d172a solid;
        text-decoration-thickness: auto;
        transition: all .1s cubic-bezier(.4, 0, .2, 1);
        box-shadow: 0px 1px 2px rgba(166, 175, 195, 0.25);
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
    }

        .btn:hover {
            background-color: #1e293b;
